# =============================================================================
# MFC Environment Variables
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to git
# =============================================================================

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/mfc

# Auth0 (v4 — @auth0/nextjs-auth0)
AUTH0_DOMAIN=YOUR_TENANT.us.auth0.com  # Domain only, no https:// prefix
AUTH0_CLIENT_ID=
AUTH0_CLIENT_SECRET=
AUTH0_SECRET=                          # openssl rand -hex 32
APP_BASE_URL=http://localhost:3000     # Was AUTH0_BASE_URL in v3

# Stripe (Payment Processing)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Solana (Blockchain)
NEXT_PUBLIC_SOLANA_RPC_URL=              # Leave empty for default devnet RPC
NEXT_PUBLIC_SOLANA_NETWORK=devnet        # devnet for development, mainnet-beta for production
MFC_TREASURY_WALLET=                     # Server-side only — platform treasury wallet address
MFC_CREDITS_PER_SOL=1000                 # Server-side only — exchange rate (1 SOL = N credits)

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_ENVIRONMENT=development
